<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>MLInstagram</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/MLInstagram.styles.css" asp-append-version="true" />
</head>
<body>
	<header>
		@if (User.Identity.IsAuthenticated)
		{
			<nav class="navbar navbar-expand-sm navbar-toggleable-sm box-shadow mb-3">
				<div class="container-fluid">
					<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
							aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>
					<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
						<ul class="navbar-nav flex-grow-1">
							<li class="nav-item">
								<a class="nav-link navbar-text" asp-area="" asp-controller="Posts" asp-action="Index">Home</a>
							</li>
							<li class="nav-item">
								<a class="nav-link navbar-text" asp-area="" asp-controller="Posts" asp-action="Create">Create</a>
							</li>
							<li>
								<div class="pt-2 mx-md-3">
									<p class="nav-link navbar-text d-inline">Dark Mode</p>
									<label class="switch">
										<input type="checkbox" class="dark-mode-toggle">
										<span class="slider round"></span>
									</label>
								</div>
							</li>
						</ul>
					</div>
				</div>
				<partial name="_LoginPartial" />
			</nav>
		}

	</header>
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>


	<footer class="border-top footer text-muted">
		<div class="container">
			&copy; 2023 - MLInstagram - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script type="text/javascript" src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
