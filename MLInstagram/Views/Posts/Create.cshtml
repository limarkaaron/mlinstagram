@model MLInstagram.Models.Post

@{
	ViewData["Title"] = "Create";
}
<form method="post" asp-controller="Posts" asp-action="Create">
	<div class="container">
		<div class="row vertical-center">
			<div class="col-8">
				<div class="card border border-3">
					<div class="card-header-custom">
						<div class="text-center">
							<h4 class="upload-text d-inline">Upload</h4>
							<a class="d-none create-next-btn btn btn-primary float-end">Next</a>
						</div>
					</div>
					<div class="card-body create-card-body">
						<div class="create-elements text-center">
							<img src="https://i.pinimg.com/736x/dc/70/7c/dc707c0e2e4a1883d4ebb81d107aec9a.jpg" width="100" height="100" />
							<h5 class="card-title mx-3 my-3">Drag Photos And Videos Here</h5>
							<input type="file" id="upload-post" name="upload-post" accept="image/jpeg, image/png, image/jpg, video/mp4" hidden />
							<label class="btn btn-primary" id="upload-post-label" for="upload-post">Select From Computer</label>
						</div>
					</div>
				</div>
			</div>
			<div class="col-4">
				<div class="card border border-3">
					<div class="card-body">
						<input type="text" class="form-control" id="post-caption" placeholder="Write a caption..."/>
					</div>
				</div>
			</div>

		</div>
	</div>
</form>

<script type="text/javascript" src="~/js/CreatePost.js"></script>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
